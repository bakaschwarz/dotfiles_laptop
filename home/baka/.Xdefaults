#History is important and we like to go way back!
URxvt.saveLines: 1000
#Why are you even asking?
URxvt.scrollBar: false
#The font inconsolata is in the official repos!
URxvt.font: xft:inconsolata:pixelsize=12
#These two are for cool transparency
URxvt*depth: 32
URxvt*background: [97]#130505

#URL Launcher stuff
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

#Color scheme
! special
*.foreground:   #FFC6B0
*.background:   #130505
*.cursorColor:  #FFC6B0

! black
*.color0:       #0C0B0B
*.color8:       #1B1213

! red
*.color1:       #610909
*.color9:       #F11F1D

! green
*.color2:       #FF9F49
*.color10:      #F3A05E

! yellow
*.color3:       #E48F46
*.color11:      #B15519

! blue
*.color4:       #C95316
*.color12:      #FFFE93

! magenta
*.color5:       #5A373B
*.color13:      #78484E

! cyan
